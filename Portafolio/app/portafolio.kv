            do_scroll_x: False
            bar_width: dp(4)
            size_hint: 1, None
            height: self.parent.height * 0.8  # ocupa parte inferior
            pos_hint: {"center_x": 0.5, "y": 0}
            scroll_type: ['bars', 'content']

