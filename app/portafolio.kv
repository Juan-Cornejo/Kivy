        SilentIconButton:
            id: hamburger_button
            icon: "menu"
            user_font_size: "32sp"
            pos_hint: {"top": 0.98, "x": 0.02}
            md_bg_color: (245/255, 245/255, 245/255, 1)
            radius: [dp(12), dp(12), dp(12), dp(12)]
            on_release: app.toggle_nav_drawer()

        BoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            padding: 0, dp(10), 0, dp(10)

            AnchorLayout:
                size_hint_y: None
                height: dp(70)
                anchor_x: "center"
                anchor_y: "top"
                padding: dp(10), 0, dp(10), 0

                Label:
                    text: "Habilidades"
                    color: (0, 0, 0, 1)
                    size_hint: None, None
                    size: dp(210), dp(30)
                    font_size: "18sp"
                    bold: True
                    halign: "center"
                    valign: "middle"
                    text_size: self.size
                    canvas.before:
                        Color:
                            rgba: (225/255, 225/255, 225/255, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]
                        Color:
                            rgba: 210/255, 210/255, 210/255, 1
                        Line:
                            rounded_rectangle: (self.x+1, self.y+1, self.width-2, self.height-2, 10)
                            width: 2

            ScrollView:
                do_scroll_x: False
                bar_width: dp(4)
                size_hint_y: 1

                MDGridLayout:
                    id: habilidades_grid
                    cols: 1
                    spacing: dp(20)
                    padding: dp(10), 0, dp(10), dp(20)
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height
    # ──────────────────────────────── MENSAJE GLOBAL ────────────────────────────────
    MDCard:
        id: habilidades_message
        size_hint: None, None
        size: root.width * 0.9, dp(48)
        pos_hint: {"center_x": 0.5, "top": 1.12}  # inicialmente oculto
        opacity: 0
        elevation: 6
        radius: [12]
        md_bg_color: app.theme_cls.bg_light
        padding: dp(10), dp(6)

        MDLabel:
            id: habilidades_message_label
            text: ""
            halign: "center"
            valign: "middle"
            bold: True
            theme_text_color: "Primary"
            text_size: self.size



