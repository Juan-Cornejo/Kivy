                    width: 2

        SilentIconButton:
            id: settings_button_sobremi
            icon: "cog"
            pos_hint: {"right": 0.98, "top": 0.98}
            on_release: root.toggle_edit_mode()

        SilentIconButton:
            id: edit_texto
            icon: "pencil"
