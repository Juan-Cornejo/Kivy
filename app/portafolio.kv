            do_scroll_x: False
            bar_width: dp(4)
            size_hint: 1, None
            height: self.parent.height * 0.8
            pos_hint: {"center_x": 0.5, "y": 0}
            scroll_type: ['bars', 'content']

            MDBoxLayout:
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                padding: dp(16), dp(10), dp(16), dp(20)
                spacing: dp(20)

                MDCard:
                    size_hint: None, None
                    width: max(dp(240), min(root.width - dp(32), dp(520)))
                    height: content_box.height + dp(32)
                    pos_hint: {"center_x": 0.5}
                    radius: [15]
                    md_bg_color: (225/255, 225/255, 225/255, 1)
                    padding: dp(16)
                    canvas.before:
                        Color:
                            rgba: (225/255, 225/255, 225/255, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [10]
                        Color:
                            rgba: 210/255, 210/255, 210/255, 1
                        Line:
                            rounded_rectangle: (self.x+1, self.y+1, self.width-2, self.height-2, 10)
                            width: 6

                    MDBoxLayout:
                        id: content_box
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height
                        spacing: dp(12)

                        # LABEL INTRODUCCIÓN
                        MDLabel:
                            id: lbl_introduccion
                            text: root.introduccion_text or "Hola, soy Nombre Apellido, un desarrollador entusiasta que disfruta crear experiencias digitales sencillas y efectivas."
                            font_style: "H6"
                            halign: "center"
                            size_hint_y: None
                            text_size: self.width, None
                            height: self.texture_size[1]

                        # CAMPO DE TEXTO INTRODUCCIÓN
                        MDTextField:
                            id: edit_introduccion_field
                            text: root.introduccion_text
                            size_hint_y: None
                            height: dp(48)
                            opacity: 0
                            mode: "fill"
                            line_color: 0, 0, 0, 0
                            line_color_focus: 0, 0, 0, 1
                            text_color_focus: 0, 0, 0, 1
                            hint_text_color_focus: 0, 0, 0, 1
                            text_color: 0, 0, 0, 1
                            on_text_validate: root.update_introduccion_from_input(); root.mostrar_mensaje_campo_actualizado()

                        # LABEL DESCRIPCIÓN
                        MDLabel:
                            id: lbl_descripcion
                            text: root.descripcion_text or "Me enfoco en construir interfaces funcionales y optimizadas para distintas pantallas, integrando buenas practicas de codigo y diseno."
                            theme_text_color: "Secondary"
                            halign: "justify"
                            size_hint_y: None
                            text_size: self.width, None
                            height: self.texture_size[1]

                        # CAMPO DE TEXTO DESCRIPCIÓN
                        MDTextField:
                            id: edit_descripcion_field
                            text: root.descripcion_text
                            size_hint_y: None
                            height: dp(48)
                            opacity: 0
                            mode: "fill"
                            line_color: 0, 0, 0, 0
                            line_color_focus: 0, 0, 0, 1
                            text_color_focus: 0, 0, 0, 1
                            hint_text_color_focus: 0, 0, 0, 1
                            text_color: 0, 0, 0, 1
                            on_text_validate: root.update_descripcion_from_input(); root.mostrar_mensaje_campo_actualizado()

