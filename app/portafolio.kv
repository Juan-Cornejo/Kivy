            id: field_update_message
            size_hint: 0.9, None
            height: dp(50)
            pos_hint: {"center_x": 0.5, "top": 1.12}  # fuera de pantalla al inicio
            elevation: 1.8
            radius: [10]
            md_bg_color: (225/255, 225/255, 225/255, 1)
            opacity: 0

            Label:
                id: field_update_message_label
                text: "Campo actualizado"
                color: (0, 0, 0, 1)
                halign: "center"
                valign: "middle"
                font_size: "16sp"

